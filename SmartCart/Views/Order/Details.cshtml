@model SmartCart.Models.Order

<h2>Order Details</h2>

<p><strong>Order ID:</strong> @Model.Id</p>
<p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
<p><strong>Payment Status:</strong> @Model.Payment?.Status</p>

<h3>Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@((item.Quantity * item.Price))</td>
            </tr>
        }
    </tbody>
</table>
