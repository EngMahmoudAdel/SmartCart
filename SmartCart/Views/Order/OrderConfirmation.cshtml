@model SmartCart.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h2>Order Confirmation</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4 class="alert-heading">Thank you for your order!</h4>
                <p>Your order #@Model.Id has been placed successfully.</p>
                <hr>
                <p class="mb-0">Please wait 3 days for delivery. Our representative will contact you on @Model.Phone.</p>
                <p>Payment method: @Model.Payment.Method</p>
                <p>Order status: @Model.Payment.Status</p>
            </div>

            <div class="mt-4">
                <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">View Order Details</a>
            </div>
        </div>
    </div>
</div>