<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Cart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartCart.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />


</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Brand Logo -->
                <a class="navbar-brand text-success logo h1 align-self-center" asp-area="" asp-controller="Home" asp-action="Index">
                    SmartCart
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Content -->
                <div class="align-self-center collapse navbar-collapse flex-fill d-lg-flex justify-content-lg-between" id="main_nav">
                    <!-- Main Navigation Links -->
                    <div class="flex-fill">
                        <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                                          @using Microsoft.AspNetCore.Identity

                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item position-relative">
                                    <a class="nav-link text-white fw-bold px-3 py-2"
                                       style="background: linear-gradient(135deg, #ff416c, #ff4b2b);
                  border-radius: 20px;
                  box-shadow: 0 4px 8px rgba(255, 75, 43, 0.3);
                  transition: all 0.3s ease;
                  margin: 0 5px;"
                                       asp-area="Admin" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                    </a>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          style="font-size: 0.6rem; padding: 3px 5px;">
                                        Admin
                                    </span>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ContactMessage" asp-action="Index">Contact</a>
                            </li>
                    <!-- Right Side Icons -->
                    <div class="navbar align-self-center d-flex">
                        <!-- Mobile Search (hidden on desktop) -->
                        <div class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3">
                            <div class="input-group">
                                <input type="text" class="form-control" id="inputMobileSearch" placeholder="Search ...">
                                <div class="input-group-text">
                                    <i class="fa fa-fw fa-search"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Search Icon (visible on desktop) -->
                        <a class="nav-icon d-none d-lg-inline" href="#" data-bs-toggle="modal" data-bs-target="#search_modal">
                            <i class="fa fa-fw fa-search text-dark mr-2"></i>
                        </a>

                        <!-- Cart Icon -->
                        <a class="nav-icon position-relative text-decoration-none"
                           asp-controller="Cart"
                           asp-action="Index">
                            <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
                            <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">0</span>
                        </a>


                        <!-- User Icon (using LoginPartial) -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <main role="main" class="container-fluid" style="width: 100%; padding: 0; margin: 0;">
        @RenderBody()
    </main>


    <!-- Footer -->
    <!-- Footer -->
    <footer class="bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row">
                <!-- Column 1: Logo & Contact -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-shopping-cart fa-2x text-success me-2"></i>
                        <h2 class="h3 text-success mb-0">Smart Cart</h2>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt me-3 text-success"></i>
                                <span>Mahmoud Adel, Toukh, Al qabila, Egypt</span>
                            </div>
                        </li>
                        <li class="mb-2">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-phone me-3 text-success"></i>
                                <a href="tel:01015004530" class="text-white text-decoration-none">01015004530</a>
                            </div>
                        </li>
                        <li class="mb-2">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-envelope me-3 text-success"></i>
                                <a href="mailto:mahmoud.adel.fci@gmail.com" class="text-white text-decoration-none">mahmoud.adel.fci@gmail.com</a>
                            </div>
                        </li>
                    </ul>
                </div>



                <!-- Column 4: Social Media -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="text-uppercase text-success mb-4">Follow Us</h5>
                    <div class="social-icons">
                        <a href="#" class="text-white me-2"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-white me-2"><i class="fab fa-linkedin-in fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-whatsapp fa-lg"></i></a>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="border-top border-secondary pt-3 mt-4">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="small mb-0">&copy; 2023 Smart Cart. جميع الحقوق محفوظة</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <div class="payment-methods">
                            <i class="fab fa-cc-visa fa-lg text-white me-2"></i>
                            <i class="fab fa-cc-mastercard fa-lg text-white me-2"></i>
                            <i class="fab fa-cc-paypal fa-lg text-white me-2"></i>
                            <i class="fab fa-cc-amazon-pay fa-lg text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <style>
        footer {
            font-family: 'Tajawal', sans-serif;
        }

            footer a:hover {
                color: #28a745 !important;
                transition: all 0.3s ease;
            }

        .social-icons a {
            display: inline-block;
            width: 40px;
            height: 40px;
            line-height: 40px;
            text-align: center;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

            .social-icons a:hover {
                background: #28a745;
                transform: translateY(-3px);
            }

        .payment-methods i {
            opacity: 0.7;
            transition: all 0.3s ease;
        }

            .payment-methods i:hover {
                opacity: 1;
            }

        .input-group .form-control:focus {
            box-shadow: none;
            border-color: #28a745;
        }
    </style>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-1.11.0.min.js"></script>
    <script src="~/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/templatemo.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
