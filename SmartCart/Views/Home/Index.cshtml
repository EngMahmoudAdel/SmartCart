@{
    ViewData["Title"] = "Home Page";
}

<!-- Modal -->
<div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="w-100 pt-1 mb-5 text-right">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="get" class="modal-content modal-body border-0 p-0">
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                <button type="submit" class="input-group-text bg-success text-light">
                    <i class="fa fa-fw fa-search text-white"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Start Banner Hero -->
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/img/banner_img_01.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left align-self-center">
                            <h1 class="h1 text-success"><b>Smart Cart</b> eCommerce</h1>
                            <h3 class="h2">Shop Smart, Shop Right</h3>
                            <p>
                                Smart Cart makes shopping easier and smarter. Discover top-rated products at unbeatable prices.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/img/banner_img_02.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left">
                            <h1 class="h1">Discover Premium Quality</h1>
                            <h3 class="h2">Affordable Luxury at Your Fingertips</h3>
                            <p>
                                At Smart Cart, we bring you quality products at the best prices. Your satisfaction is our top priority.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/img/banner_img_03.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left">
                            <h1 class="h1">Shop the Best Deals</h1>
                            <h3 class="h2">Exclusive Discounts Every Day</h3>
                            <p>
                                Explore daily deals and grab the best discounts on trending products.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev text-decoration-none w-auto ps-3 text-black" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="fas fa-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3 text-black" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="fas fa-chevron-right"></i>
    </a>
</div>
<!-- End Banner Hero -->
<!-- Start Categories of The Month -->
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1 display-5 fw-bold mb-3">Categories of The Month</h1>
            <p class="lead text-muted">
                Explore our most popular collections this month
            </p>
        </div>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Classic -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
            <div class="card h-100 border-0 shadow-sm overflow-hidden" style="transition: transform 0.3s;">
                <div class="ratio ratio-1x1 bg-light">
                    <img src="~/img/61.jpg" class="img-fluid object-fit-cover" alt="Classic Collection">
                </div>
                <div class="card-body text-center py-4">
                    <h5 class="card-title fw-bold mb-3">Classic</h5>
                    <a class="btn btn-dark rounded-pill px-4"
                       asp-controller="Shop" asp-action="Index" asp-route-category="classic">
                        Shop Now <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Casual -->
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
            <div class="card h-100 border-0 shadow-sm overflow-hidden" style="transition: transform 0.3s;">
                <div class="ratio ratio-1x1 bg-light">
                    <img src="~/img/53.jpg" class="img-fluid object-fit-cover" alt="Casual Collection">
                </div>
                <div class="card-body text-center py-4">
                    <h5 class="card-title fw-bold mb-3">Casual</h5>
                    <a class="btn btn-dark rounded-pill px-4"
                       asp-controller="Shop" asp-action="Index" asp-route-category="casual">
                        Shop Now <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Categories of The Month -->
