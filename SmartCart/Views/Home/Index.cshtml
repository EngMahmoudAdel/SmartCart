            <!-- Product 3 -->
            <div class="col-12 col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden product-card">
                    <div class="ratio ratio-4x3 bg-light">
                        <img src="~/img/30.jpg" class="card-img-top object-fit-contain p-3" alt="Summer Vibes">
                    </div>
                    <div class="card-body text-center pt-3 pb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Casual Wear</span>
                            <span class="fw-bold text-dark">$360.00</span>
                        </div>
                        <h3 class="h5 fw-bold mb-3">Summer Vibes</h3>
                        <p class="text-muted mb-4">Be coooooool</p>
                        <a href="shop-single.html" class="btn btn-outline-dark w-100">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Featured Product -->