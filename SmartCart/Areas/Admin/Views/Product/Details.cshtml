@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient">
        <h4 class="text-white">Product Details</h4>
    </div>
    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.Name" class="img-thumbnail" style="max-height: 200px;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>