@{
    ViewData["Title"] = "لوحة التحكم الإدارية";
}



<div class="admin-dashboard">
    <!-- بطاقات الإحصائيات -->
    <div class="stats-cards">
        <div class="card">
            <h3>عدد المنتجات</h3>
            <p>125</p>
            <i class="fas fa-boxes"></i>
        </div>

        <div class="card">
            <h3>الطلبات اليوم</h3>
            <p>24</p>
            <i class="fas fa-shopping-cart"></i>
        </div>

        <div class="card">
            <h3>المستخدمون</h3>
            <p>89</p>
            <i class="fas fa-users"></i>
        </div>
    </div>

    <!-- قسم إدارة المنتجات -->
    <div class="products-section">
        <div class="section-header">
            <h2><i class="fas fa-box-open"></i> إدارة المنتجات</h2>
            <a asp-action="AddProduct" class="btn btn-primary">
                <i class="fas fa-plus"></i> إضافة منتج جديد
            </a>
        </div>

        <table class="products-table">
            <thead>
                <tr>
                    <th>الصورة</th>
                    <th>اسم المنتج</th>
                    <th>السعر</th>
                    <th>الكمية</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img src="/images/product1.jpg" alt="Product"></td>
                    <td>حاسوب محمول</td>
                    <td>2500 ر.س</td>
                    <td>15</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-edit">
                            <i class="fas fa-edit"></i> تعديل
                        </a>
                        <a href="#" class="btn btn-sm btn-delete">
                            <i class="fas fa-trash"></i> حذف
                        </a>
                    </td>
                </tr>
                <!-- يمكنك إضافة المزيد من المنتجات هنا -->
            </tbody>
        </table>
    </div>
</div>