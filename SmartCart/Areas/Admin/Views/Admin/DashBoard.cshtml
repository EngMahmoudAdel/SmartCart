@{
    ViewData["Title"] = "لوحة التحكم الإدارية";
}



<div class="admin-dashboard">
    <!-- بطاقات الإحصائيات -->
    <div class="stats-cards">
        <div class="card">
            <h3>عدد المنتجات</h3>
            <p>@ViewBag.ProductCount</p>
            <i class="fas fa-boxes"></i>
        </div>

        <div class="card">
            <h3>المستخدمون</h3>
            <p>@ViewBag.UserCount</p>
            <i class="fas fa-users"></i>
        </div>
    </div>
</div>

<style>
    .admin-dashboard {
        padding: 20px;
    }

    .stats-cards {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

        .stats-cards .card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            flex: 1;
            min-width: 200px;
            text-align: center;
            position: relative;
        }

            .stats-cards .card h3 {
                margin-top: 0;
                color: #555;
            }

            .stats-cards .card p {
                font-size: 2rem;
                font-weight: bold;
                margin: 10px 0;
                color: #2c3e50;
            }

            .stats-cards .card i {
                position: absolute;
                right: 20px;
                top: 20px;
                font-size: 2rem;
                color: #3498db;
                opacity: 0.3;
            }
</style>

   
