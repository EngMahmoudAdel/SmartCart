@{
    ViewData["Title"] = "لوحة التحكم الإدارية";
}

<div class="admin-dashboard container-fluid py-4">
    <!-- بطاقات الإحصائيات -->
    <div class="row g-4">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="stats-card card bg-white rounded-3 shadow-sm h-100">
                <div class="card-body p-4 position-relative">
                    <h3 class="h5 text-secondary mb-3">عدد المنتجات</h3>
                    <p class="display-6 fw-bold text-primary mb-0">@ViewBag.ProductCount</p>
                    <i class="fas fa-boxes position-absolute top-20 end-20 fs-2 text-primary opacity-10"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="stats-card card bg-white rounded-3 shadow-sm h-100">
                <div class="card-body p-4 position-relative">
                    <h3 class="h5 text-secondary mb-3">المستخدمون</h3>
                    <p class="display-6 fw-bold text-success mb-0">@ViewBag.UserCount</p>
                    <i class="fas fa-users position-absolute top-20 end-20 fs-2 text-success opacity-10"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="stats-card card bg-white rounded-3 shadow-sm h-100">
                <div class="card-body p-4 position-relative">
                    <h3 class="h5 text-secondary mb-3">الطلبات</h3>
                    <p class="display-6 fw-bold text-warning mb-0">@ViewBag.orderCount</p>
                    <i class="fas fa-shopping-cart position-absolute top-20 end-20 fs-2 text-warning opacity-10"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-dashboard {
        min-height: calc(100vh - 120px);
    }

    .stats-card {
        transition: all 0.3s ease;
        border: none;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0,0,0,0.1);
        }

    .top-20 {
        top: 20px;
    }

    .end-20 {
        right: 20px;
    }

    @@media (max-width: 768px) {
        .display-6 {
            font-size: 2rem;
        }

        .stats-card .card-body {
            padding: 1.5rem !important;
        }
    }

    @@media (max-width: 576px) {
        .admin-dashboard {
            padding: 15px;
        }

        .stats-card {
            margin-bottom: 15px;
        }
    }
</style>