<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - لوحة التحكم</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #f8f9fa;
            --danger-color: #e74a3b;
            --warning-color: #f6c23e;
            --success-color: #1cc88a;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fc;
        }

        /* شريط التنقل العلوي */
        .admin-header {
            background: white;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            padding: 1rem 0;
        }

            .admin-header .navbar-nav {
                flex-direction: row;
            }

            .admin-header .nav-link {
                color: #5a5c69;
                font-weight: 500;
                padding: 0.5rem 1rem;
                border-radius: 0.35rem;
            }

                .admin-header .nav-link:hover,
                .admin-header .nav-link.active {
                    color: var(--primary-color);
                    background-color: rgba(78, 115, 223, 0.05);
                }

        /* المحتوى الرئيسي */
        .admin-main {
            padding: 2rem;
            margin-top: 1rem;
        }

        /* بطاقات الإحصائيات */
        .stats-card {
            border-left: 0.25rem solid var(--primary-color);
            border-radius: 0.35rem;
        }

            .stats-card .card-body {
                padding: 1.25rem;
            }

            .stats-card i {
                font-size: 2rem;
                color: var(--primary-color);
                opacity: 0.3;
            }

        /* جدول المنتجات */
        .data-table {
            background: white;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }

            .data-table th {
                background-color: var(--secondary-color);
                color: #5a5c69;
                font-weight: 600;
            }

        /* الأزرار */
        .btn-action {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            border-radius: 0.2rem;
        }

        .btn-edit {
            background-color: var(--warning-color);
            color: #000;
        }

        .btn-delete {
            background-color: var(--danger-color);
            color: white;
        }

        /* زر السلة */
        .cart-badge {
            font-size: 0.6rem;
            top: -0.5rem;
            right: -0.5rem;
        }

        /* البحث */
        .search-box {
            max-width: 20rem;
        }
    </style>
</head>
<body>
    <!-- شريط التنقل العلوي -->
    <header class="admin-header">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-success" href="#">
                        <i class="fas fa-cog me-2"></i>لوحة التحكم
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="adminNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-box-open me-1"></i>المنتجات
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                                    <i class="fas fa-box-open me-1"></i>الطلبات
                                </a>
                            </li>

                                

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                    <i class="fas fa-tags"></i> التصنيفات
                                </a>
                            </li>



                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">صلاحيات المستخدمين</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AdminCarts" asp-action="Index">
                                    <i class="fas fa-shopping-basket me-1"></i>عربات التسوق
                                </a>
                            </li>
                        </ul>

                        <div class="d-flex align-items-center">
                            <div class="search-box me-3 d-none d-lg-block">
                                <div class="input-group">
                                    <input class="form-control" type="text" placeholder="بحث...">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>

                            <a class="nav-link position-relative me-3" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge">0</span>
                            </a>

                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- المحتوى الرئيسي -->
    <main class="admin-main">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <!-- السكربتات -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // تفعيل dropdowns في navbar
        document.addEventListener('DOMContentLoaded', function() {
            var dropdowns = document.querySelectorAll('.dropdown-toggle');
            dropdowns.forEach(function(dropdown) {
                dropdown.addEventListener('click', function(e) {
                    e.preventDefault();
                    var menu = this.nextElementSibling;
                    menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>