@model SmartCart.Models.Category

@{
    ViewData["Title"] = "Create New Category";
}

<div class="container mt-4">
    <h4 class="text-muted mb-4">Add a new product category</h4>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" id="categoryForm" class="needs-validation" novalidate>
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control form-control-lg"
                           placeholder="Enter category name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                    <div class="invalid-feedback">
                        Please provide a valid category name.
                    </div>
                </div>

                <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Create Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Enhanced client-side validation
        (function () {
            'use strict';

            // Fetch the form to apply custom Bootstrap validation
            var form = document.getElementById('categoryForm');

            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}