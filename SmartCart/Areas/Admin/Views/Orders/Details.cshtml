@model SmartCart.Models.Order

@{
    ViewData["Title"] = "تفاصيل الطلب #" + Model.Id;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">تفاصيل الطلب #@Model.Id</h6>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <h5>معلومات العميل</h5>
                <p><strong>البريد الإلكتروني:</strong> @Model.User?.Email</p>
                <p><strong>الهاتف:</strong> @Model.Phone</p>
                <p><strong>العنوان:</strong> @Model.Address</p>
            </div>
            <div class="col-md-6">
                <h5>معلومات الطلب</h5>
                <p><strong>تاريخ الطلب:</strong> @Model.OrderDate.ToString("yyyy/MM/dd HH:mm")</p>
                <p>
                    <strong>الحالة:</strong>
                    <span class="badge @(Model.Status == "Pending" ? "bg-warning" : "bg-success")">
                        @Model.Status
                    </span>
                </p>
                <p><strong>طريقة الدفع:</strong> @Model.Payment?.Method</p>
                <p><strong>المبلغ الإجمالي:</strong> @Model.TotalAmount.ToString("C")</p>
            </div>
        </div>

        <h5>المنتجات المطلوبة</h5>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>المنتج</th>
                        <th>الكمية</th>
                        <th>السعر</th>
                        <th>المجموع</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@((item.Quantity * item.Price).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Status == "Pending")
        {
            <form asp-action="UpdateStatus" method="post" class="mt-3">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="status" value="Completed" />
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> تأكيد الاستلام
                </button>
                <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
            </form>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
        }
    </div>
</div>