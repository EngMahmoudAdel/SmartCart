@model Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Order #@Model.Id Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Customer Information</h5>
                    <div class="mb-3">
                        <strong>Name:</strong> @Model.User?.FullName
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong> @Model.User?.Email
                    </div>
                    <div class="mb-3">
                        <strong>Phone:</strong> @Model.User?.PhoneNumber
                    </div>
                </div>
                <div class="col-md-6">
                    <h5>Order Information</h5>
                    <div class="mb-3">
                        <strong>Date:</strong> @Model.OrderDate.ToString("f")
                    </div>
                    <div class="mb-3">
                        <strong>Status:</strong> 
                        <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                    </div>
                    <div class="mb-3">
                        <strong>Payment:</strong> @Model.Payment?.PaymentMethod
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <h5>Order Items</h5>
