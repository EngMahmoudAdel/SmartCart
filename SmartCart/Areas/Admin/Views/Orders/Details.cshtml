@model SmartCart.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<h2 class="mb-4">Order #@Model.Id Details</h2>

<div class="card mb-4">
    <div class="card-header">
        <strong>Customer Information</strong>
    </div>
    <div class="card-body">
        <p><strong>Name:</strong> @Model.User.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy/MM/dd hh:mm tt")</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <strong>Order Items</strong>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString()</td>
                        <td>@(item.Quantity * item.Price).ToString()</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total Amount:</th>
                    <th>@Model.TotalAmount.ToString("C")</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


<a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
